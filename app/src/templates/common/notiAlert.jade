script(async src="/scripts/noti_dialog.js",type="text/javascript")
#hocalwire_partner_push_div(data-partner="#{env.partner}",data-domain="#{encodeURIComponent(env.rootUrl)}")
    style.
        .noti_bgstyle{width:100%;height:100%;position:fixed;left:0;top:0;z-index:15010000;background:rgba(0,0,0,.8);opacity:.95;filter:alpha(opacity=95)}.noti_wrap{z-index:2147483647;left:50%;top:0;position:fixed;width:400px;margin-left:-200px;padding:12px;background:#327696;font-family:sans-serif;-moz-box-shadow:1px 1px 1px 0 #c9c9c9;-webkit-box-shadow:1px 1px 1px 0 #c9c9c9;box-shadow:1px 1px 1px 0 #c9c9c9;border:1px solid #e8e8e8}.notif_box{display:table;margin-top:10px}.noti_wrap .noti_img{border-radius: 5px;max-height: 80px;width: 100%;float:left;margin:0 10px 0 0;min-width: 120px;margin-left: -5px;}.noti_wrap .noti_cont{display:table-cell;vertical-align:top}.noti_wrap .noti_cont h2{font-size:14px;margin:0;font-weight:600;line-height:18px;color:#fff;}.noti_wrap .noti_cont .botinfo{font-size:12px;font-weight:400;padding:5px 0;line-height:18px;color:#fff;font-style: italic;}.noti_wrap .noti_btnwrap{text-align:right;padding:10px 0 0;clear:both}.noti_btnwrap a.allow,.noti_btnwrap a.notnow{width:auto;padding:4px 15px;background:#fff;line-height:20px;border:1px solid #ccc;font-size:11px;color:#333;text-decoration:none;text-transform:uppercase;border-radius:3px;margin:0 0 0 10px}.noti_btnwrap a.notnow{border:none;border-radius:none;text-transform:none;text-decoration:underline;font-size:12px}.noti_btnwrap a.allow:hover{color:#fff;-moz-transition:background .3s ease-in;-o-transition:background .3s ease-in;-webkit-transition:background .3s ease-in;background:#4FACEF;border:1px solid #4B84AD}.noti_btnwrap a.active{background:#b40002;color:#fff;border:1px solid #b40002}.noti_wrap .teaminfo{font-size:12px}.noti_wrap h3{color:#184b80;margin-top: 10px; margin-bottom: 10px;}.noti_wrap h2 span,.noti_wrap h3 span{color:#4a9400}.noti_wrap li{padding-bottom:2px} .noti_wrap input[type="checkbox"]{margin:4px;}@media only screen and (max-device-width:480px){.noti_wrap{width:300px;margin-left:-150px}}
    #noti_subscribe_dialog(style="display:none")
        .noti_bgstyle
        .noti_wrap
            .noti_img(style='width:30%;')
                -if(env.partnerData.pushNotificationLogo) {
                    img(src='#{env.partnerData.pushNotificationLogo}')
                -} else {
                    img(src='/images/logo.png')
                -}
                
            .noti_cont(style='width:70%;')
                h2
                    | Get the Latest News Update From #{env.partnerData.partnerName}.
                    
                .botinfo
                    | You can manage the notifications any time from your browser settings.
            .noti_btnwrap
                span#__emsg(style='color:red;font-size:12px;')
                a.notnow.noti_not_now(onclick='window.NotificationAPI.closeDialog(5);', href='javascript:void(0);') No Thanks
                -var url = 'https://hocalwire.com/partner-services/enable-notification/'+env.partner+'?domain_name='+env.rootUrl+"&partner="+env.partner;
                a#allow_noti_dialog_btn.allow.js-allow-noti(onclick='window.NotificationAPI.allowNoti();', href='#{url}',target="_blank")     Allow     
