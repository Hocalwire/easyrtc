extends ../../theme_zebra/layout
block content
    div.container
        include ../../theme_zebra/partials/_header
        include ../../theme_zebra/partials/_navArea
        div#contentSection
            div.row
                div(class="col-lg-8 col-md-8 col-sm-8")
                    div(class="left_content")
                        include ../../theme_zebra/partials/_websiteCurrentTags
                        include ../../theme_zebra/partials/_breadcrumb
                        #left_level_1.right_level_1
                        h1 Hocalwire is a one stop solution for all content and technology needs
                        
                        .single_page_content.entry-box
                            
                            #left_level_2.right_level_2
                            .details-content-story
                                p   Ally Technologies India Private Limited, GCF2, Aditya Gold Crest Indirapuram, Ghaziabad 
                            
                            -if(env.partnerData.facebookUrl || env.partnerData.twitterUrl){
                                ul.social-link.clearfix
                                  li Like Us:
                                  -if(env.partnerData.facebookUrl){
                                    li
                                      div(class="fb-like", data-href="#{env.partnerData.facebookUrl}", data-layout="button_count" data-action="like", data-show-faces="false", data-share="true")
                                  -}
                                  -if(env.partnerData.twitterUrl){
                                    li
                                      a(class="twitter-follow-button", href="#{env.partnerData.twitterUrl}") Follow
                                  -}
                              
                            -}
                            #left_level_3.right_level_3
                            #left_level_4.right_level_4
                            
                div(class="col-lg-4 col-md-4 col-sm-4")
                    aside(class="right_content")
                        include ../../theme_zebra/partials/_detailsRightSection
        include ../../theme_zebra/partials/_footer