include ../../theme_elephant/allMixin
extends ../../theme_elephant/layout
block content
    include ../../theme_elephant/partials/_header
    include ../../theme_elephant/partials/_navArea
    div.container
        .row.mtop15
            #breaking-news-section
                -if(data['breaking-news-section'] && data['breaking-news-section'].templateData && data['breaking-news-section'].templateData.mixinName){
                                +#{data['breaking-news-section'].templateData.mixinName}(data['breaking-news-section'])
                -}
        .row.mtop15
            .col-md-8.no-padding.pright15
               .outer_wrapper.clearfix
                    .row.mtop15
                        .col-md-12
                            ul(class="cp-authors-grid")
                                        -for(var i=0;i<env.partnerAuthorData.length;i++){
                                            -if(env.partnerAuthorData[i].total_news >0){
                                                li(class="col-md-4 col-sm-6")
                                                    a(href="#{env.partnerAuthorData[i].url}",class="cp-author-box")
                                                        div(class="cp-thumb")
                                                            img(src="#{env.partnerAuthorData[i].imageUrl}")
                                                        h3  #{env.partnerAuthorData[i].name}
                                                        p ( #{env.partnerAuthorData[i].total_news} )
                                            -}
                                            
                                              
                                        -}
            .col-md-4.no-padding
                include ../../theme_elephant/partials/_genericRightSection
                      
            
    include ../../theme_elephant/partials/_footer

