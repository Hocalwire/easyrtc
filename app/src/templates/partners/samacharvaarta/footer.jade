script.
    if ( screen.width > 979 ){
    $(window).on("scroll", function(e) {
    var headerHeight = $('.header_wrapper').outerHeight();
    var marNegSearch = parseInt($('.post-heading-title').css('margin-top'));
    var marSearch = parseInt($('.latest_newsarea').css('margin-top'));
    var calc = headerHeight + marSearch +10;
    var scrollTop = $(window).scrollTop();
    if (scrollTop > calc) {
    var wid = $('#main-nav').width();
    $('.post-heading-title').addClass("fix-search");
    $('.latest_newsarea').addClass("fix-this");
    $('.latest_newsarea').css("width",wid);
    $('.latest_newsarea').css("margin",'0px auto');
    $('.post-heading-title').css("width",wid);
    $('.post-heading-title').css("margin",'0px auto');
    $('.post-heading-title').css("background",'#fff');
    } else {
    $('.post-heading-title').removeClass("fix-search");
    $('.latest_newsarea').removeClass("fix-this");
    $('.latest_newsarea').css("width",'100%');
    $('.post-heading-title').css("width",'auto');
    }  });
    }

 