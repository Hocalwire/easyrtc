include ../../theme_cobra/allMixin
include ../../common/_registerReporter
extends ../../theme_cobra/layout
block content
    include ../../theme_cobra/partials/_header
    div(id="sb-site", class="body_wraper_box")
        include ../../theme_cobra/partials/_navArea
        //- +stickySocialShare("","",true)
        div#contact-us-page(data-role="page",class="main_content row")
            div(class="content_wraper three_columns_container box-item")
                div(class="twelve columns")
                    #level_top_full
                div(class="twelve columns")
                    div(class="eight columns clearfix home_left_section")
                        .container
                            .row
                                .eight.columns
                                    h2.title-2
                                        | Contact Information
                                    .information
                                        .contact-datails
                                            .info
                                                h3 SUDARSHAN TV CHANNEL LTD
                                                div.detail A-84, Sector-57,
                                                div.detail Noida (DELHI-NCR),
                                                div.detail Hindustan (India)- 201301
                                                div.detail Phone: 0120-4999900, 0120-4999994
                                               
                                        
                                   
                            .row
                                    .eight.columns
                                        h2.title-2
                                            | Leave A Meassage!
                                        // Form
                                        form#contactForm.contact-form.contact-us-form(data-toggle='validator')
                                            .row
                                                #success-common.error.common-error(style='display:none;')
                                                #err-common.error.common-error(style='display:none;')
                                            .row
                                                .six.columns
                                                    .form-group
                                                        input#name.form-control.inputBox(type='text', name='name', placeholder='Full Name', required='',data-error='Please enter your name')
                                                        #err-name.error.contact-us-error.left-align.help-block.with-errors(style='display:none;') Please enter your name.
                                                .six.columns
                                                    .form-group
                                                        input#email.form-control.inputBox(type='email', name="email" placeholder='mail@sitename.com', required='', data-error='Please enter your email')
                                                        #err-email.contact-us-error.error.help-block.with-errors.left-align(style='display:none;') Please enter your email.
                                                        
                                            .row
                                                      
                                                .six.columns
                                                    .form-group
                                                        input#phone.form-control.inputBox(type='text', name='phone', placeholder='Phone', required='', data-error='Please enter your Phone Number')
                                                        #err-phone.contact-us-error.error.help-block.with-errors.left-align(style='display:none;') Please enter your Phone Number
                                                .six.columns
                                                    .form-group
                                                        input#subject.form-control.inputBox(type='text', name='subject', placeholder='Subject', required='', data-error='Please enter your subject')
                                                        #err-subject.contact-us-error.error.help-block.with-errors.left-align(style='display:none;') Please enter your subject
                                            .row
                                                
                                                .twelve.columns
                                                    .form-group
                                                        textarea#message.form-control.inputBox(placeholder='Message', name="message",rows='3', data-error='Write your message', required='')
                                                        #err-message.error.contact-us-error.left-align(style='display:none;') Please enter your message.
                                            .row.margin-bottom20
                                                
                                                    .twelve.text-center
                                                            button#submit.btn.btn-common.js-btn-submit-contact(type='submit') Send Your Message
                                                            #msgSubmit.h3.text-center.hidden
                                                            .clearfix
                    .four.columns
                        div(class="twelve columns clearfix")
                            .sidebar.side-bar.right-sidebar
                                include ../../theme_cobra/partials/_genericRightSection
                div(class="content_wraper three_columns_container")
                    div(class="row")
                        #level_bottom_full
                            -if(data['level_bottom_full'] && data['level_bottom_full'].templateData && data['level_bottom_full'].templateData.mixinName){
                                +#{data['level_bottom_full'].templateData.mixinName}(data['level_bottom_full'])
                            -}

        include ../../theme_cobra/partials/_footer
block scripts
    include ../../common/_reporterResources