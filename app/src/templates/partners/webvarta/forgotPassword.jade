extends ../../theme_lion/layout
block content
  div#forgot-password-page(data-role="page")
    .main-content
      .container
        .row
          .col-md-12
            .cp-login-box
              .cp-login-form
                form.form-forgotPassword
                  ul
                    #err-mobile.error.left-align(style='display:none;') Please enter Valid Mobile Number.
                    li.input-group
                      span.input-group-addon
                        i.icon-25
                      input.form-control(type='text', name='mobile_no' id='mobile_no' placeholder='Mobile Number')
                    button.btn.btn-submit.js-btn-submit-forgotPassword.waves-effect.waves-button(type='submit')
                        | Send OTP 
                        i.fa.fa-angle-right
                .signup
                  a(href='/login') Try Login once again